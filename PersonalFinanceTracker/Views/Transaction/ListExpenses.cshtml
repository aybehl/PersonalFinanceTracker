@model IEnumerable<PersonalFinanceTracker.Models.TransactionDto>
@{
    ViewBag.Title = "List all Expenses";
}

<div class="container mt-5">
    <h2 class="text-center">My Expenses</h2>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <button class="btn btn-outline-secondary" id="filterBy">Filter By</button>
            <button class="btn btn-outline-primary">This Month</button>
            <button class="btn btn-outline-primary">Last Month</button>
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Category
            </button>
            <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                <li><a class="dropdown-item" href="#">Rent</a></li>
                <li><a class="dropdown-item" href="#">Entertainment</a></li>
                <li><a class="dropdown-item" href="#">Shopping</a></li>
            </ul>
        </div>
        <a href="/Transaction/NewExpense" class="btn btn-danger">+ New Expense</a>
    </div>

    <div class="row">
        <div class="col-md-12">
            @foreach (var transaction in Model)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <!-- Assuming you have icons for each category, you can add them here -->
                                                                <div>
                                    <h5 class="card-title">@transaction.Title</h5>
                                    <p class="card-text">Amount: $@transaction.Amount</p>
                                    <p class="card-text">Date: @transaction.TransactionDate.ToString("dd MMM yyyy")</p>
                                    <p class="card-text">Category: @transaction.CategoryName</p>
                                </div>
                            </div>
                            <div>
                                <a href="#" class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@transaction.TransactionId" data-title="@transaction.Title">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                <a href="/Transaction/EditExpense/@transaction.TransactionId" class="btn btn-outline-primary">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger text-center" role="alert">
                    <span class="modal-title-icon">&#9888;</span> <!-- Warning Icon -->
                    <strong id="expenseTitle"></strong>
                </div>
                <p class="text-center">Are you sure you want to delete this expense?</p>
                <p class="text-center">This action cannot be undone. All values associated with this expense will be lost.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget; // Button that triggered the modal
            var transactionId = button.getAttribute('data-id'); // Extract info from data-* attributes
            var transactionTitle = button.getAttribute('data-title'); // Extract the title
            var deleteUrl = '/Transaction/DeleteExpense/' + transactionId;
            var modalTitle = deleteModal.querySelector('#expenseTitle');
            var deleteForm = deleteModal.querySelector('#deleteForm');
            modalTitle.textContent = transactionTitle; // Update the modal title
            deleteForm.setAttribute('action', deleteUrl); // Update the form action
        });
    });
</script>
