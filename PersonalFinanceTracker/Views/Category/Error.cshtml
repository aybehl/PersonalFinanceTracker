@{
    ViewBag.Title = "Error";
    var backUrl = TempData["BackUrl"] as string ?? Url.Action("Category");
    var errorMessage = TempData["ErrorMessage"] as string ?? "An unexpected error occurred. Please try again later.";
}

<div class="container">
    <h3 class="text-center text-danger">An Error Occurred</h3>
    <p class="text-center">@errorMessage</p>
    <div class="text-center">
        <a href="@backUrl" class="btn btn-primary">Go Back</a>
    </div>
</div>
